<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >
    <ImageView
        android:layout_width="233dp"
        android:layout_height="126dp"
        android:src="@drawable/logo"
        android:layout_gravity="center|top"
        android:layout_marginTop="100dp"
        />
    <TextView
        android:layout_gravity="center|top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineHeight="16dp"
        android:layout_marginTop="255dp"
        android:text="Giải pháp sức khỏe"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/background_loading_screen"
        android:layout_marginTop="320dp"

        android:layout_gravity="center|top"
        />
    <TextView
        android:id="@+id/btn_discover"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="Khám phá"
        android:gravity="center"
        android:drawableRight="@drawable/ic_line_right_24px"
        android:textStyle="bold"
        android:paddingRight="20dp"
        android:background="@drawable/bg_btn_loading_screen"
        android:textColor="#364EB9"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="50dp"
        android:textSize="18dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chào mừng"
        android:textSize="35dp"
        android:layout_gravity="left|bottom"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="150dp"
        android:textColor="@color/white"
        />


</FrameLayout>