<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_grey"
    tools:context=".Activity.QuoteActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/mToolbar_quotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:elevation="5dp"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title" />

<com.google.android.material.card.MaterialCardView
    android:id="@+id/ln_ly"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="12dp"
    android:backgroundTint="@color/white"
    android:layout_margin="20dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="@font/quicksand_semi_bold"
            android:text="Có thể Bạn Đã Biết ?"
            android:textSize="22dp"
            android:textColor="@color/white"
            android:background="@color/deep_blue"
            android:gravity="center"
            />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_quotes"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/microsoft_icons_celebration"
            android:layout_margin="20dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            app:shapeAppearanceOverlay="@style/corner_image"
            />
        <TextView
            android:id="@+id/tv_titleQuotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_semi_bold"
            android:text="Faucibus ut porta massa."
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:maxLines="2"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/black"/>

            <TextView
                android:id="@+id/tv_contentQuotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="160dp"
                android:fontFamily="@font/quicksand_medium"
                android:text="@string/content_quotes"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_understood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:backgroundTint="@color/deep_blue"
                android:fontFamily="@font/quicksand_semi_bold"
                android:textSize="18dp"
                android:textAllCaps="false"
                android:text="Đã hiểu rồi nhé!"
                android:layout_margin="20dp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
</LinearLayout>