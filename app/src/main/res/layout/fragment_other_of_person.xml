<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragment.OtherOfPersonFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_purchasedProduct"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:contentPaddingLeft="20dp"
        app:contentPaddingRight="20dp"
        android:backgroundTint="@color/white"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="5">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="36dp"
            android:layout_gravity="start|center"
            android:src="@drawable/ic_purchase_product_24px"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="4.2"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_medium"
            android:text="Sản phẩm đã mua"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:paddingLeft="15dp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow_right_24dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_feedbackToUs"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:contentPaddingLeft="20dp"
        app:contentPaddingRight="20dp"
        android:backgroundTint="@color/white"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="5">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="24dp"
                android:layout_gravity="start|center"
                android:src="@drawable/ic_feedback_24px"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="4.2"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_medium"
                android:text="Feedback cho chúng tôi"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:paddingLeft="15dp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_right_24dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_infoAboutUs"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:contentPaddingLeft="20dp"
        app:contentPaddingRight="20dp"
        android:backgroundTint="@color/white"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="5">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="24dp"
                android:layout_gravity="start|center"
                android:src="@drawable/ic_book_mark_24px"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="4.2"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_medium"
                android:text="Thông tin về Health Solutions"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:paddingLeft="15dp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_right_24dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_logout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:contentPaddingLeft="20dp"
        app:contentPaddingRight="20dp"
        android:backgroundTint="@color/white"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="5">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="24dp"
                android:layout_gravity="start|center"
                android:src="@drawable/ic_logout_24px"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="4.2"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_medium"
                android:text="Đăng xuất"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:paddingLeft="15dp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_right_red_24dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>






</LinearLayout>