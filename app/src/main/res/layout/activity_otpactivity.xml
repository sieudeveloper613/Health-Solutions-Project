<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="170dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:src="@drawable/logo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineHeight="16dp"
        android:text="Xác nhận OTP"
        android:layout_marginTop="223dp"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:background="@drawable/bg_login_screen"
        android:layout_marginTop="260dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Xác nhận mã OTP"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"/>
        <EditText
            android:layout_width="220dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_edit_text"
            android:hint="Mã OTP"
            android:paddingLeft="16dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp" />
        <TextView
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:textSize="16dp"
            android:gravity="center"
            android:background="@drawable/bg_btn_otp"
            android:layout_marginTop="50dp"
            android:text="Gửi lại OTP"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="Vui lòng nhập chính xác OTP được gửi vào tin nhắn thông báo qua số điện thoại của bạn"
            android:layout_marginTop="100dp"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OTP có hiệu lực trong 60 giây"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/btn_confirmOTP"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_btn_login_screen"
            android:text="Xác nhận"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:gravity="center|center_vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="300dp"/>
        <TextView
            android:id="@+id/tv_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Hủy bỏ"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="360dp"/>

    </FrameLayout>

</FrameLayout>