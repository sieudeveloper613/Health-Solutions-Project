<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="170dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:src="@drawable/logo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_bold"
        android:text="Quên mật khẩu"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="16dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/bg_login_screen"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_gravity="bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_semi_bold"
            android:text="Xác nhận Email của bạn"
            android:textSize="18dp"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/ed_enterEmail"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_edit_text"
            android:drawableLeft="@drawable/ic_post_card"
            android:fontFamily="@font/quicksand_medium"
            android:hint="Nhập địa chỉ Email"
            android:paddingLeft="10dp"
            android:drawablePadding="16dp"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_medium"
            android:text="@string/email_required"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_confirmEmail"
            android:layout_width="180dp"
            android:layout_height="56dp"
            android:fontFamily="@font/quicksand_semi_bold"
            android:text="Xác nhận"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:backgroundTint="@color/dark_blue"
            android:layout_gravity="center"
            app:cornerRadius="30dp"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/tv_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_semi_bold"
            android:text="Quay lại"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</FrameLayout>