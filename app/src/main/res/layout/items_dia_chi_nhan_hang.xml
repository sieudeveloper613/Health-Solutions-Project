<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <androidx.cardview.widget.CardView
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_fullNameReceiver"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="@font/quicksand_semi_bold"
                android:text="Đinh Thị Hoài Thu" />

            <View
                android:layout_width="2dp"
                android:layout_height="18dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/tv_phoneNumberReceiver"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="@font/quicksand_semi_bold"
                android:text="09xxxxxxx" />

            <ImageView
                android:id="@+id/img_editProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="80dp"
                app:srcCompat="@drawable/ic_three_dot_24px" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_addressReceiver"
            android:layout_width="393dp"
            android:layout_height="46dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:textSize="16dp"
            android:fontFamily="@font/quicksand_regular"
            android:text="38 Nhà Thờ Bến Cát, đường Hải Thượng Lãn Ông, phường 14, Gò Vấp TP.HCM" />

        <TextView
            android:id="@+id/tv_defaultAddress"
            android:layout_width="393dp"
            android:layout_height="46dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="85dp"
            android:textSize="15dp"
            android:textColor="#0088FF"
            android:fontFamily="@font/quicksand_medium"
            android:text="Địa chỉ mặc định" />


        />

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>