<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_detailProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/product_pic_0"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_backPressed"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_keyboard_arrow_left_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksand_semi_bold"
                            android:text="Trở Lại"
                            android:textSize="16dp"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <LinearLayout
                android:background="@color/deep_blue"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_PriceOfProduct"
                        android:fontFamily="@font/quicksand_bold"
                        android:textColor="@color/white"
                        android:textSize="22dp"
                        android:text="15.000.000 đ"
                        android:layout_width="157dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:id="@+id/tv_salePriceOfProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text=""
                        android:textColor="@color/deep_grey"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="40dp"
                    android:layout_gravity="center_vertical"
                    app:cardCornerRadius="10dp"
                    android:layout_width="150dp"
                    android:layout_height="60dp">
                    <LinearLayout
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/logo_name"
                            android:layout_width="130dp"
                            android:layout_height="50dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_NameOfProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:fontFamily="@font/quicksand_semi_bold"
                android:layout_margin="16dp"
                android:text="Máy đo nhịp tim cao cấp Nhật Bản..."
                android:textColor="@color/black"
                android:maxLines="3"
                />

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <ImageView
                    android:src="@drawable/star_rate"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"/>
                <ImageView
                    android:src="@drawable/star_rate"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <ImageView
                    android:src="@drawable/star_rate"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <ImageView
                    android:src="@drawable/star_rate"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>

                <ImageView
                    android:src="@drawable/star_rate"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/txt_point_number"
                    android:textSize="18dp"
                    android:layout_marginLeft="20dp"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_marginLeft="30dp"
                    android:background="@color/black"
                    android:layout_width="2dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:layout_marginLeft="50dp"
                    android:textSize="18dp"
                    android:text="Đã bán 0"
                    android:id="@+id/txt_soluong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/ic_re_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="44dp"
                        android:fontFamily="@font/quicksand_regular"
                        android:text="Hoàn tiền nếu hàng giả"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/ic_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="44dp"
                        android:fontFamily="@font/quicksand_semi_bold"
                        android:text="Thông tin bảo hành"
                        android:textSize="16dp"
                        android:textColor="@color/deep_blue"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/ic_import"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="44dp"
                        android:fontFamily="@font/quicksand_regular"
                        android:text="Hoàn tiền nếu hàng giả"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:background="#d2d1d1"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_semi_bold"
                    android:text="Thông tin chi tiết"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="20dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:weightSum="3">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/quicksand_semi_bold"
                        android:textSize="14dp"
                        android:text="Danh Mục"
                        android:textColor="@color/deep_grey"/>
                    <TextView
                        android:id="@+id/tv_categoryProduct"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:fontFamily="@font/quicksand_semi_bold"
                        android:text="Máy đo tim nhật bản"
                        android:textSize="14dp"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:weightSum="3">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/quicksand_semi_bold"
                    android:textSize="14dp"
                    android:text="Kiểu loại"
                    android:textColor="@color/deep_grey"/>
                <TextView
                    android:id="@+id/tv_typeProduct"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/quicksand_semi_bold"
                    android:text="Thiết bị điện tử"
                    android:textSize="14dp"
                    android:textColor="@color/black" />
            </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:weightSum="3">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/quicksand_semi_bold"
                        android:textSize="14dp"
                        android:text="Xuất xứ"
                        android:textColor="@color/deep_grey"/>
                    <TextView
                        android:id="@+id/tv_originProduct"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:fontFamily="@font/quicksand_semi_bold"
                        android:text="Nhật Bản"
                        android:textSize="14dp"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:weightSum="3">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/quicksand_semi_bold"
                        android:textSize="14dp"
                        android:text="Thương hiệu"
                        android:textColor="@color/deep_grey"/>
                    <TextView
                        android:id="@+id/tv_branchProduct"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:fontFamily="@font/quicksand_semi_bold"
                        android:text="ANOVINA"
                        android:textSize="14dp"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:background="#d2d1d1"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mô tả sản phẩm"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"/>
                <TextView
                    android:id="@+id/tv_descriptionProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_medium"
                    android:textSize="16dp"
                    android:text="null"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_outline_chat"
        android:layout_gravity="bottom"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_chat"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            app:strokeColor="@color/deep_blue"
            app:strokeWidth="1dp"
            app:contentPadding="3dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chat_with_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_medium"
                    android:text="Chat"
                    android:textSize="14dp"
                    android:textColor="@color/deep_blue"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_addProduct"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:backgroundTint="@color/red"
            android:fontFamily="@font/quicksand_semi_bold"
            android:text="Thêm vào giỏ hàng"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="18dp"
            app:cornerRadius="6dp"
            android:layout_marginLeft="30dp"/>
    </LinearLayout>
</FrameLayout>